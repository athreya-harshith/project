
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
 
      <link rel="stylesheet" href="emailVerification.css">

      <title>Login </title>
    
    </head>
    
    <body class="signin-body container" >
      <div class="text-center pt-3">     
      </div>    
    <div class="d-flex flex-row justify-content-center">
      <div class="signin_form card py-5 px-5 shadow">
    
        <form method="POST"  id="myform">
          <h1 class="heading"> Sign In to Medico</h1>
           <span id="check"> </span>
                  <div>
                        <label for="input">Email or mobile phone number</label><br />
                        <input type="email" name="userinput" id="input" /> <br />
                        <span id="error"></span>
                        <label for="Password">password</label><br />
                        <input type="password" name="password" id="Password" /> <br />
                         <span id="error2"> </span>
                  </div>
            <button type="submit" name="submit" id="Submit-btn" class="submitBTN w-100"> Continue </button>   <br />
          <small>By continuing, you agree to Medico Conditions of Use</small>     <hr />
          <a href="/forgot" class="link-signin">Forgot your password? </a>
        </form>
    
    
    
        <div class="mt-3">
          <p><span>New to Medico?</span></p>
          <a href="/register" class="btn w-100 NewUser border-secondary "> Create your Medico account </a>
        </div>
      </div>
    
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    
    <script type="text/javascript">
        
    
    
    $(document).ready(function(){
    
        $('#Submit-btn').click(function(event){
                  event.preventDefault();
    
      let Email = $('#input').val(); 
      let Password = $('#Password').val();

       let checkResult = $('#check')   
     if(Email === ''){
          $('#error').html('number or email is required');
          $('#error').css('color',"orange");
    }
    else  if(Password === ''){
      $('#error').html('');
          $('#error2').html('password is required');
          $('#error2').css('color',"orange");
    }
    
    else {
       
      
        let formdata = { Email,Password};
    // alert(JSON.stringify(formdata));
    $.ajax({
        
           url : "/login",
           type:'POST',
           // data: JSON.stringify(formdata),
           data : formdata,
           error: function (request, error) {
           // console.log(arguments);
           // alert(" Can't do because: " + error);
           // checkResult.html(request.responseText)
           let res = JSON.stringify(request)
            alert(request.responseText)
        },
           success :function(data){
                 $("#myform").trigger("reset");
                 console.log('With given credentials User account account');
                 alert(data)
                 window.location.href ="/";
           
    
                  
            }
          
           
      });
    
    
     $('#input').keydown(function(){
          $('#error').html('');
     });
     $('#Password').keydown(function(){
          $('#error2').html('');
     });
    
    
    
    } });
    
    
    
    });
    
    
    </script>
